<nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
    <div class="navbar-brand mx-2">Mongo Scraper</div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse ml-4" id="navbarNavAltMarkup">
        <div class="navbar-nav">
        <a class="nav-item nav-link active mx-2" href="/">Home <span class="sr-only">(current)</span></a>
        <a class="nav-item nav-link mx-2" id="btn-favorites" href="/articles">Saved Articles</a>
        <button class="btn btn-outline-info mx-2 my-2 my-sm-0" id="btn-scrape" type="submit">Scrape Latest Articles</button>
        </div>
