<div class="jumbotron jumbotron-fluid text-center">
    <div class="container">
    <h1 class="display-4">Mongo Scraper</h1>
    <p class="lead">BROUGHT TO YOU BY - the ONION, News in Brief.</p>
    </div>
</div>

<div id="row-content" class="row mb-4 justify-content-center">
    <div id="col-content" class="col-sm-8 px-0">
        {{#unless articles}}
            <div class="jumbotron text-center">
                <h2>You have No Saved Articles</h2>
                <h4>Scrape for articles, and save the ones you like!</h4>
            </div>
        {{/unless}}
            {{#each articles}}
                <div class="card mb-3">
                    <div id="article-{{this.id}}" class="card-header bg-info text-white" data-saved={{this.saved}}>
                        <h5 class="headings">{{this.title}}</h5>
                    </div>
                        <div class="card-body">
                            <a href="{{this.link}}" target="_blank">{{this.link}}</a>
                            <br>
                            <button id="{{this.id}}" class="mark-saved btn btn-dark text-white p-2 m-3" type="submit">{{this.buttonTxt}}</a>
                        </div>
                </div>
            {{/each}}
    </div>
</div>